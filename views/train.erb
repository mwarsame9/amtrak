<h1><%= @train.name %></h1>

<h3>Select all the cities this train travels to:</h3>
<% if @cities.any?()%>
  <form action="/trains/<%= @train.id %>" method="post">
    <div class="form-group">
    <input type="hidden" name="_method" value="patch">
      <select id='city_ids[]' name='city_ids[]' type='text' class="form-control">
        <% @cities.each() do |city|%>
        <option value="<%= city.id %>" class="form-control"><%= city.name()%></option>
        <% end %>
      </select>
      <input type="date" name="arrival_date" class="form-control">
      <input type="time" name="arrival_time" class="form-control">
    </div>
    <button type="submit" class="btn btn-success">Add stop</button>
  </form>
<% end %>
<br>
<form action="/trains/<%= @train.id() %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
    <button type="submit" class="btn btn-danger">Delete train</button>
  </div>
</form>

<% if @train.cities().any?() %>
  <h3>City List</h3>
  <p>Here are all the cities this train travels to:</p>
  <ul>
    <% @train.cities().each do |city| %>
      <li><%= city.name() %> <%= @stop.date%> <%= @stop.time%></a></li>
    <% end %>
  </ul>
<% else %>
<p>There are no cities yet!</p>
<% end %>

